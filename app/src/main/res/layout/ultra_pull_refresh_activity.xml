<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/default_pull_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="下拉刷新 - 默认使用方式"/>


    <Button
        android:id="@+id/default_auto_pull_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自动下拉刷新 - 默认使用方式"/>

    <Button
        android:id="@+id/load_more_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="加载更多 -- 默认使用方式"/>


    <Button
        android:id="@+id/custom_header_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义头部 - 1"/>
    <Button
        android:id="@+id/custom_footer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义底部 - 1"/>

    <Button
        android:id="@+id/custom_empty_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="自定义空view - 1"/>

</LinearLayout>